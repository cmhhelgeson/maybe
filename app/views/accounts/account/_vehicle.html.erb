<%= form_field_tag do %>
  <%= f.label :make, class: "form-field__label" %>
  <%= f.text_field :make, placeholder: 'Enter make', required: true, class: 'form-field__input' %>
<% end %>

<%= form_field_tag do %>
  <%= f.label :model, class: "form-field__label" %>
  <%= f.text_field :model, placeholder: 'Enter model', required: true, class: 'form-field__input' %>
<% end %>

<%= form_field_tag do %>
  <%= f.label :year, class: "form-field__label" %>
  <%= f.number_field :year, in: 1942..Time.zone.now.year, required: true, class: 'form-field__input' %>
<% end %>
<div data-controller="year-dropdown" class="absolute right-1 bottom-[10px] flex items-end">
  <button type="button" class="flex items-center justify-between w-20 px-2 py-1 text-sm rounded-lg hover:bg-gray-100 focus:bg-gray-100" data-action="click->year-dropdown#toggleMenu">
    <div data-year-dropdown-target="label"><%= f.object.year || Time.zone.now.year %></div>
    <%= lucide_icon("chevron-down", class: "text-gray-500 w-5 h-5") %>
  </button>
  <ul data-year-dropdown-target="menu" class="hidden fixed p-1 bg-white rounded-[10px] min-w-[112px] z-50 translate-y-2 border border-alpha-black-100 shadow-[inset_0_-1px_0_0_rgba(0,0,0,0.1)]">
    <% (1942..Time.zone.now.year).reverse_each do |year| %>
      <li data-action="click->year-dropdown#selectOption" data-year-dropdown-target="option" data-value="<%= year %>" class="flex justify-between items-center p-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer rounded-lg <%= "bg-gray-100" if year == f.object.year %>"><%= year %>
      </li>
    <% end %>
  </ul>
</div>